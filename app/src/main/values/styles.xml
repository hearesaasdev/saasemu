<resources>

    <!-- Tema principal -->
    <style name="Theme.SaaSEmu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores adaptáveis (Material You) -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Ativa animações do Material 3 -->
        <item name="android:windowTransitionBackgroundFadeDuration">200</item>
    </style>

    <!-- Botões padrão -->
    <style name="SaaSEmu.Button" parent="Widget.Material3.Button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Switches -->
    <style name="SaaSEmu.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:textSize">16sp</item>
    </style>

</resources>