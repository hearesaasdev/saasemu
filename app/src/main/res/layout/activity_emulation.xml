<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emulation_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Controls overlay (optional). If you created TouchControlsView in package emu.saasemu.app.ui.controls -->
    <com.saasemu.app.ui.controls.TouchControlsView
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="bottom|center"
        android:gravity="center">

        <Button
            android:id="@+id/btnLoadCore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importar core" />

        <Button
            android:id="@+id/btnLoadRom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importar ROM"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</FrameLayout>